		"build:docs": "typedoc --out docs --name 'ZenFS DOM' src/index.ts",
		"test": "npx zenfs-test -abcf",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"c8": "^10.1.3",
		"eslint": "^9.12.0",
