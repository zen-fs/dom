		"tsx": "^4.19.2",
		"typedoc": "^0.28.0",
		"typescript": "^5.7.2",
		"typescript-eslint": "^8.8.1"
	},
	"peerDependencies": {
		"@zenfs/core": "^2.3.11",
		"kerium": "^1.3.4",
		"utilium": "^2.5.0"
